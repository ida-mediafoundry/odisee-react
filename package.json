{
    "name": "odisee-crypto",
    "version": "0.1.0",
    "description": "A crypto dashboard just for you ;-)",
    "repository": "git@github.com:ida-mediafoundry/odisee-crypto.git",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start":
            "webpack-dev-server --port 3000 --config conf/webpack.config.babel.js --open",
        "build": "webpack -p --config conf/webpack.config.babel.js",
        "test": "jest --watch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": ["eslint"],
        "*.{js,json,css,md,babelrc,eslintrc,prettierrc}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^8.1.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.2",
        "babel-loader": "^7.1.4",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "clean-webpack-plugin": "^0.1.19",
        "css-loader": "^0.28.11",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^4.19.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-react": "^7.7.0",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.0.7",
        "husky": "^0.15.0-rc.12",
        "identity-obj-proxy": "^3.0.0",
        "image-webpack-loader": "^4.2.0",
        "jest": "^22.4.3",
        "lint-staged": "^7.0.0",
        "mini-css-extract-plugin": "^0.2.0",
        "postcss-import": "^11.1.0",
        "postcss-loader": "^2.1.2",
        "prettier": "^1.11.1",
        "webpack": "^4.1.1",
        "webpack-cli": "^2.0.12",
        "webpack-dev-server": "^3.1.1"
    },
    "dependencies": {
        "@fortawesome/fontawesome": "^1.1.4",
        "@fortawesome/fontawesome-free-solid": "^5.0.8",
        "@fortawesome/react-fontawesome": "^0.0.17",
        "classnames": "^2.2.5",
        "invariant": "^2.2.4",
        "normalize.css": "^8.0.0",
        "prop-types": "^15.6.1",
        "raf": "^3.4.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "warning": "^3.0.0"
    },
    "jest": {
        "roots": ["<rootDir>/src"],
        "collectCoverage": true,
        "setupTestFrameworkScriptFile": "<rootDir>/conf/jest.config.js",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^.+\\.css$": "identity-obj-proxy"
        }
    }
}
